{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["es2019"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": ["lib/**/*", "pages/**/*", "types/*"],
  "compileOnSave": false
}
