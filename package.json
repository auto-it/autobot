{
  "name": "autobot",
  "version": "1.0.0",
  "description": "A GitHub app to add extra features to auto",
  "author": "Zephraph <zephraph@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com//autobot.git",
  "homepage": "https://github.com//autobot",
  "bugs": "https://github.com//autobot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc -p tsconfig.json",
    "dev": "run-p dev:build dev:server",
    "dev:build": "yarn build -w",
    "dev:server": "nodemon --exec \"yarn start\"",
    "start": "probot run ./lib/app.js",
    "lint": "eslint src/**/*",
    "type-check": "tsc --pretty --noEmit",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "now-build": "yarn build",
    "now-dev": "yarn dev:build"
  },
  "dependencies": {
    "auto": "^4.8.13",
    "await-to-js": "^2.1.1",
    "axios": "^0.18.0",
    "lodash": "^4.17.11",
    "pino": "^5.12.5",
    "probot": "^9.1.1",
    "probot-serverless-now": "^2.0.0",
    "tapable": "^2.0.0-beta.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.129",
    "@types/nock": "^9.3.0",
    "@types/node": "^11.9.0",
    "@types/pino": "^5.8.7",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "deepmerge": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.5",
    "nock": "^10.0.6",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^3.1.0",
    "prettier": "^1.16.4",
    "smee-client": "^1.0.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.5.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
